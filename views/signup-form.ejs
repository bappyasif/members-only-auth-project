<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <div class="container">
        <%- include("./partials/navs.ejs") %>
        <h1><%= title %></h1>

        <%- include("./partials/errors.ejs") %>

        <form action="" method="post">
            <fieldset>
                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" placeholder="{ex: John}" autocomplete="name" value=<%= user?.firstname %>>
            </fieldset>
            <fieldset>
                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" placeholder="{ex: Doe}" autocomplete="family-name" value=<%= user?.lastname %>>
            </fieldset>
            <fieldset>
                <label for="username">Email Address</label>
                <input type="email" id="username" name="username" placeholder="{ex: ab@gg.com}" autocomplete="email" required value=<%= user?.username %>>
            </fieldset>
            <fieldset>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required="true"  placeholder="{ex: use a strong password}" autocomplete="current-password">
            </fieldset>
            <fieldset>
                <label for="confirm">Confirm Password</label>
                <input type="password" id="confirm" name="confirm"  placeholder="{ex: confirm password}" autocomplete="new-password">
            </fieldset>
            <button type="submit">Register User</button>
        </form>
    </div>
</body>
</html>